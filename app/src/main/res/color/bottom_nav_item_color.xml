<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Cuando el ítem está seleccionado, se aplica el color azul -->
    <item android:color="@color/selected_item_color" android:state_checked="true"/>
    <!-- Cuando el ítem no está seleccionado, se aplica el color gris -->
    <item android:color="@color/unselected_item_color" android:state_checked="false"/>
</selector>