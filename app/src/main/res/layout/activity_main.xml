<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Encabezado EUNEIZCHEF -->
        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="@color/colorSecondary"
            android:background="@color/colorPrimary"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="120dp"
            android:fontFamily="serif"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="What do you want to eat today?"/>

        <!-- Campo de búsqueda -->
        <LinearLayout
            android:id="@+id/searchBarContainer"
            app:layout_constraintTop_toBottomOf="@id/headerTitle"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:hint="Buscar recetas"
                android:inputType="text"
                android:background="@drawable/search_edittext_background"
                android:padding="10dp"
                android:drawablePadding="8dp"/>

            <ImageButton
                android:id="@+id/searchButton"
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:background="@drawable/search_button_background"
                android:src="@drawable/ic_search_white"
                android:contentDescription="Buscar"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:padding="12dp"
                android:scaleType="centerInside"/>
        </LinearLayout>

        <!-- Sección La receta -->
        <TextView
            android:id="@+id/daySectionTitle"
            app:layout_constraintTop_toBottomOf="@id/searchBarContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Day recipe"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/weekRecipeContainer"
            app:layout_constraintTop_toBottomOf="@id/daySectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            app:cardCornerRadius="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/recipeImageView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="170dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_placeholder_image"/>

                <TextView
                    android:id="@+id/recipeTitleTextView"
                    app:layout_constraintTop_toBottomOf="@id/recipeImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:text="titulo"/>

                <TextView
                    android:id="@+id/recipeAreaTextView"
                    app:layout_constraintTop_toBottomOf="@id/recipeTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:textColor="@color/gray"
                    android:text="italia"/>

                <TextView
                    android:id="@+id/recipeCategoryTextView"
                    app:layout_constraintTop_toBottomOf="@id/recipeAreaTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingBottom="15dp"
                    android:textColor="@color/gray"
                    android:text="Categoria"/>

                <ImageButton
                    android:id="@+id/favoriteButton"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@drawable/favorite_selector"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="favorite"
                    android:padding="8dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/areaSectionTitle"
            app:layout_constraintTop_toBottomOf="@id/weekRecipeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:padding="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Discover recipes worldwide"/>

        <HorizontalScrollView
            android:id="@+id/areaSection"
            app:layout_constraintTop_toBottomOf="@id/areaSectionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/areasContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:background="@drawable/bottom_nav_background"
        android:layout_width="match_parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/bottom_nav_item_color"
        app:itemTextColor="@color/bottom_nav_item_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>



