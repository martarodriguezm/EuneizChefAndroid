<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Encabezado EUNEIZCHEF -->
    <TextView
        android:id="@+id/headerTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Euneiz Chef"
        android:textSize="32sp"
        android:textColor="#FF5722"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:fontFamily="sans-serif-condensed"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/headerTitle"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Sección de Áreas con CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/areasTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Áreas"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingBottom="16dp" />

                    <TextView
                        android:id="@+id/startersTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrantes"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/mainsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Platos principales"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/dessertsTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postres"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/drinksTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bebidas"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp"
                        android:textColor="#666666" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Receta de la Semana con CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/recipeOfTheWeekTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receta de la Semana"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingBottom="16dp" />

                    <include
                        layout="@layout/item_recipe" />

                    <Button
                        android:id="@+id/recipeOfTheWeekButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DESCUBRIR"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Lo Más Cocinado con CardView -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:padding="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/mostCookedTitleTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lo Más Cocinado"
                        android:textSize="24sp"
                        android:textColor="#333333"
                        android:fontFamily="sans-serif-condensed"
                        android:paddingTop="24dp"
                        android:paddingBottom="16dp" />

                    <include
                        layout="@layout/item_recipe" />

                    <Button
                        android:id="@+id/mostCookedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VER MÁS"
                        android:backgroundTint="#FF5722"
                        android:textColor="#FFFFFF"
                        android:layout_gravity="end" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- BottomNavigationView -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.constraintlayout.widget.ConstraintLayout>



